{
  "name": "serverless-crud-guru-challenge",
  "version": "1.0.0",
  "description": "CRUD API con AWS Lambda, API Gateway y DynamoDB usando Serverless Framework",
  "type": "module",
  "scripts": {
    "prepare": "husky",
    "lint": "eslint src --ext .ts",
    "format": "prettier --write .",
    "type-check": "tsc --noEmit",
    "test": "jest",
    "build": "tsc",
    "dev": "serverless offline",
    "deploy:dev": "npx serverless deploy --stage dev --region us-east-1",
    "deploy:prod": "npx serverless deploy --stage prod --region us-east-1",
    "remove:dev": "npx serverless remove --stage dev --region us-east-1"
  },
  "lint-staged": {
    "*.{ts,tsx,js,json,md}": [
      "prettier --write",
      "eslint --fix"
    ]
  },
  "jest": {
    "preset": "ts-jest",
    "testEnvironment": "node",
    "roots": [
      "<rootDir>/tests"
    ]
  },
  "keywords": [
    "serverless",
    "aws",
    "lambda",
    "dynamodb",
    "crud",
    "api"
  ],
  "author": "Carlos Olivera Mispireta",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/coliveramispireta/serverless-aws-typescript.git"
  },
  "bugs": {
    "url": "https://github.com/coliveramispireta/serverless-aws-typescript/issues"
  },
  "homepage": "https://github.com/coliveramispireta/serverless-aws-typescript#readme",
  "devDependencies": {
    "@types/aws-lambda": "^8.10.152",
    "@types/jest": "^30.0.0",
    "@types/node": "^24.3.0",
    "@typescript-eslint/eslint-plugin": "^8.41.0",
    "@typescript-eslint/parser": "^8.41.0",
    "aws-sdk-client-mock": "^4.1.0",
    "esbuild": "^0.25.9",
    "eslint": "^9.34.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-prettier": "^5.5.4",
    "husky": "^9.1.7",
    "jest": "^30.1.1",
    "lint-staged": "^16.1.5",
    "prettier": "^3.6.2",
    "serverless-offline": "^14.4.0",
    "ts-jest": "^29.4.1",
    "ts-node": "^10.9.2",
    "typescript": "^5.9.2"
  },
  "dependencies": {
    "@aws-sdk/client-dynamodb": "^3.876.0",
    "@aws-sdk/lib-dynamodb": "^3.876.0",
    "uuid": "^11.1.0"
  }
}
